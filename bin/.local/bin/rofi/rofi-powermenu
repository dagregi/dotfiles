#!/usr/bin/env bash

shutdown_opt=""
logoff_opt="󰗽"
restart_opt="󰜉"
lock_opt=""

opt_menu() {
	rofi -dmenu -u -1 -theme $XDG_CONFIG_HOME/rofi/themes/powermenu.rasi
}

lock_screen() {
	[ -n "$(mpc status)"] && mpc -q pause
	betterlockscreen -l
}
logoff() {
	mpd --kill
	bspc quit
}

run_rofi() {
	echo "$lock_opt\n$logoff_opt\n$restart_opt\n$shutdown_opt" | opt_menu
}
confirm() {
	echo "Yes\nNo" | sh $XDG_CONFIG_HOME/rofi/scripts/confirmation
}

state=$(run_rofi)
[ -n "$state" ] && confirmation=$(confirm)

[ "$confirmation" = "Yes" ] && case "$state" in
"$shutdown_opt") loginctl poweroff
	;;
"$restart_opt") loginctl reboot
	;;
"$lock_opt") lock_screen
	;;
"$logoff_opt") logoff
	;;
*) echo "Stil don't know what to do!"
	;;
esac || exit 0
