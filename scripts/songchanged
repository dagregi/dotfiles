#!/usr/bin/env sh

COVER_DIR="$HOME/.tmp"

filename=$(mpc current -f %file%)
artist=$(mpc current -f %artist%)
title=$(mpc current -f %title%)
album=$(mpc current -f %album%)

mpc readpicture "$filename" > "$COVER_DIR/raw_cover.png" 2> /dev/null &&\
    convert -resize 80x80 "$COVER_DIR/raw_cover.png" "$COVER_DIR/cover.png"

dunstify -i "$COVER_DIR/cover.png" "󰝚  $title" """󰠃  $artist
󰀥  $album"""
